.view#login
  
  
  form#login-form.anim-zoom-out
    
    img.logo(ck-no-drag, src = 'assets/logo.svg')
    p.lead Package management. The way it meant to be.
    
    div(ck-multistate = 'loginForm')
      
      .input-group
        input.form-control(type = 'text', placeholder = 'email address', ng-model = 'credentials.email')
        input.form-control(type = 'password', placeholder = 'password', ng-model = 'credentials.password')
    
      .clearfix
        label.fancy-checkbox.pull-left
          input(id = 'chk-remember-me', type = 'checkbox', ng-model = 'credentials.remember') 
          span Remember Me
          
      
      button.btn.btn-lg.btn-loading(ng-click = 'login()', ck-multistate = 'loginButton')
        span.icon.ion-load-a.animate-spin.loading
        span.caption LOGIN
